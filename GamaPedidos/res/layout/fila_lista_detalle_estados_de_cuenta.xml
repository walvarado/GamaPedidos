<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30sp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/fila_lista_detalle_estados_de_cuenta_no_documento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp" style="@style/CodeFont_label_value"/>

    <TextView
        android:id="@+id/fila_lista_detalle_estados_de_cuenta_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35sp" style="@style/CodeFont_label_value"/>

    <TextView
        android:id="@+id/fila_lista_detalle_estados_de_cuenta_abono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp" style="@style/CodeFont_label_value"/>

    <TextView
        android:id="@+id/fila_lista_detalle_estados_de_cuenta_tipo_documento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp" style="@style/CodeFont_label_value"/>

</LinearLayout>
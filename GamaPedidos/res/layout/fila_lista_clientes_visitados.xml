<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/clientes_visitados_cliente_textview"
        android:layout_width="90sp"
        android:layout_height="wrap_content" style="@style/CodeFont_label_value"/>
    
    <TextView
        android:id="@+id/clientes_visitados_total_textview"
        android:layout_width="90sp"
        android:layout_height="wrap_content" style="@style/CodeFont_label_value"/>
    
    <TextView
        android:id="@+id/clientes_visitados_hora_textview"
        android:layout_width="90sp"
        android:layout_height="wrap_content" style="@style/CodeFont_label_value"/>

</LinearLayout>